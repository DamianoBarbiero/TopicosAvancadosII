@model MvcControleJogo.Models.ClienteJogo

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>ClienteJogo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="NomeClienteFK" class="control-label"></label>
                 @Html.DropDownListFor(model => model.NomeClienteFK, new SelectList(ViewBag.Cliente, "ID", "NomeCliente"),"Selecione", new { @class = "form-control" })
                <span asp-validation-for="NomeClienteFK" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="NomeJogoFK" class="control-label"></label>
                 @Html.DropDownListFor(model => model.NomeJogoFK, new SelectList(ViewBag.Jogos, "ID", "NomeJogo"),"Selecione", new { @class = "form-control" })
                <span asp-validation-for="NomeJogoFK" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
